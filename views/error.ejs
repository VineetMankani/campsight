<%- layout('layouts/boilerplate') %> 

<div class="row">
    <div class="alert alert-danger col-6 offset-3" role="alert">
        <h4 class="alert-heading">Error <%= err.status %> - <%= err.message %></h4><hr>
        <% if(process.env.NODE_ENV !== "production"){ %> 
        <p><%= err.stack %></p>
        <% } %> 
    </div>
</div>

<div class="row" style="height: 40vh;">
    <div class="col-12">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30108.814811567878!2d73.74217686148799!3d19.386385032549736!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bdd720a3ef72a5b%3A0x4641dacc75262661!2sHarishchandragad!5e0!3m2!1sen!2sus!4v1657091695107!5m2!1sen!2sus" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>    </div>
</div>


<% for (let campground of campgrounds) { %> 
    <div class="card my-4">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= campground.images[0].url %> " class="card-img-top" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text text-muted"><%= campground.location %></p>
                    <p class="card-text"><%= campground.description %></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
                </div>
            </div>
        </div>
    </div>

<% } %> 
